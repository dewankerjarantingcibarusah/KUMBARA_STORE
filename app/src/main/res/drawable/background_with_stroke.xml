<!-- bottom_stroke_only.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white" />
    <size android:height="2dp" /> <!-- Tinggi stroke -->
    <stroke
        android:width="0dp"
        android:color="@android:color/black" />
    <padding
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="-2dp" /> <!-- Tinggi negatif untuk memindahkan stroke ke bawah -->
</shape>
